<div class="p-5 container">
    <div>
        <div class="p-1" style="text-align: center;">
            <h1>Search Books</h1>
        </div>
        <div>
            <form action="/book-search" method="GET">
                <input type="hidden" name="page" value="1">
                <div class="row">
                    <div class="col-4">
                        <select name="cate" class="form-control">
                            <option value="All">All</option>
                            <%for(bookcate of locals.bookCategories){%>
                                <option value="<%=bookcate%>"><%=bookcate%></option>
                                <%}%>
                        </select>
                    </div>
                    <div class="col">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Book's name, author..."
                                aria-describedby="button-addon2" name="search">
                            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>